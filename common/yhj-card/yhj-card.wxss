.yhj-card{
  height: 206rpx;
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 4px;
}
.card-price-wrap{
  display: inline-block;
  vertical-align: top;
  line-height: 206rpx;
  width:265rpx;
  height:206rpx;
  font-size:40rpx;
  text-align: center;
  font-weight: 600;
  background: #ffda44;
  position: relative;
  margin-left: -5rpx;
}
.card-price-wrap::before{
  content:"";
  position:absolute;
  left:0;
  top:0;
  width:10rpx;
  height:100%;
  background-color: #fff;
  background-position: 100% 35%;
  background-image:radial-gradient(#f5f5f5 0, #f5f5f5 8rpx, #ffda44 8rpx, #ffda44);
  background-size: 16rpx 10rpx;
  }
.card-price{
  margin-left: 16rpx;
  font-size: 80rpx;
}
.yhj-desc-wrap{
  display: inline-block;
  width:232rpx;
  line-height:48rpx;
  padding-left:24rpx;
  font-size:28rpx;
}
.yhj-title{
 margin-top: 30rpx;
 margin-bottom: 10rpx;
}
.yhj-desc{
  height: 48rpx;
  color:#666;
  font-size:26rpx;
}