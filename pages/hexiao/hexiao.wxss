.tihuoma-icon{
  height: 422rpx;
  width:455rpx;
}
.tihuoma-text{
padding: 40rpx 0;
}
.tihuoma-input-box{
  width: 100%;
}
.tihuoma-input{
height: 100rpx;
margin:0 25rpx 56rpx;
background: #fff;
font-size: 24rpx;
text-align: center;
}
.tihuoma-phcolor{
color: #999999;  
}

.tihuoma-error-box{
  position: fixed;
  top: 0;left: 0;
  bottom: 0;
  right: 0;
  z-index: 2;
}
.tihuoma-error-mask{
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.7;
}
.tihuoma-error-inner{
  width: 590rpx;
  height: 390rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -195rpx;
  margin-left: -295rpx;
  background: #fff;
  border-radius: 16rpx;
}
.tihuoma-error-text{
  padding: 90rpx 0 80rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 28rpx;
}
.tihuoma-error-inner .sure-btn{
width: 210rpx;
height: 85rpx;
line-height: 85rpx;
color: #fff;
background: #ff6410;
}