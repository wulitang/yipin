/* pages/ziti/ziti.wxss */
page{
  background: #f5f5f5;
}
.ziti-page{
  background: #fff;
  padding: 0 20rpx;
}
.map-icon{
  color:#000;
  font-size: 30rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #eee;
  background-size:26rpx 26rpx; 
  background-repeat: no-repeat;
  padding-left: 40rpx;
  background-position: left center;
  background-image: url('data:image/png;base64,');
}
.shop-message{
  padding: 25rpx;
  border-bottom: 1px solid #eee;
}
.shop-name{
  color: #333333;
  font-size: 36rpx;
  font-weight: 700;
}
.shop-add{
  color: #555555;
  font-size: 30rpx;
  margin: 20rpx 0;
}
.shop-phone{
    color: #555555;
  font-size: 30rpx;
}
.order-num{
  border-bottom: 1px solid #eee; 
  padding: 20rpx 0; 
}
.order-num view{
  font-size: 26rpx;
  color: #666666;
  line-height: 50rpx;
}
.li-view{
  font-size: 30rpx;
  color: #000000;
  height: 88rpx;
  line-height: 88rpx;
   border-bottom: 1px solid #eee; 
}
.li-view em{
  float: right;
  font-size: 28rpx;
  color: #333333;
}
i{
  color:#fb5f1b;
}
.order-message{
  margin-bottom: 25rpx;
}
.goods-list{
  margin:20rpx 0;
  background: #fff;
  padding: 20rpx;
}
.goods-item{
  padding: 20rpx 0;
  border-bottom: 1px solid #eee; 
}
.goods-item image{
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
  display: block;
  float: left;
  margin-right: 25rpx;
}
.goods-title{
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 25rpx;
  display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}
.goods-money{
  font-size: 30rpx;
  color: #333;
  margin-left: 225rpx;
  height: 60rpx;
}
.goods-money view{
  width: 45%;
  float: left;
  display: block;
}
.goods-num{
  font-size: 28rpx;
  color: #333333;
}
.money-list{
  background: #fff;
  padding: 20rpx;
}
.money-list view{
  font-size: 28rpx;
  color: #333333;
  height: 60rpx;
}
.money-list view em{
  float: right;
}
.all-money {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 50rpx;
  font-size: 30rpx;
  color: #333;
}
.all-money view{
  padding: 20rpx 0 0 0;
  border-top:1px solid #eee; 
}
.all-money view em{
  color:#eb2a2a;
  font-size: 36rpx;
  float: right;
}
.sure-time{
  line-height: 100rpx;
  text-align: right;
  background: #fff;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333;
}